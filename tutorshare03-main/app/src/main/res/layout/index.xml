<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#0f697c"
    tools:context=".MainActivity">

    <ImageView
        android:layout_height="150dp"
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_above="@id/card1"
        android:layout_marginTop="100dp"
        android:src="@drawable/logo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:cardBackgroundColor="#ffff"
        app:cardCornerRadius="15dp"
        app:cardElevation="10dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" >

            <Button
                android:id="@+id/btnstudent"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="#2a97ae"
                android:backgroundTint="#2a97ae"
                android:text="Student"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/btnstudent"
                android:text="or"
                android:textSize="20sp">
            </TextView>

            <Button
                android:id="@+id/btntutor"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textor"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="#0f697c"
                android:backgroundTint="#0f697c"
                android:text="Tutor"
                android:textSize="20sp" />



        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>